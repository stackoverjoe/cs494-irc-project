<html>
  <style>
    body {
      background-color: rgb(192, 190, 190) !important;
    }
    .container {
      border: 2px solid #dedede;
      background-color: #f1f1f1;
      border-radius: 5px;
      padding: 10px;
      margin: 10px 0;
    }

    .mainContainer {
      border: 1px solid lightgray;
      border-radius: 3px;
      min-height: 40vh;
    }
    /* Darker chat container */
    .darker {
      border-color: #ccc;
      background-color: #ddd;
    }

    /* Clear floats */
    .container::after {
      content: "";
      clear: both;
      display: table;
    }

    /* Style images */
    .container img {
      float: left;
      max-width: 60px;
      width: 100%;
      margin-right: 20px;
      border-radius: 50%;
    }

    /* Style the right image */
    .container img.right {
      float: right;
      margin-left: 20px;
      margin-right: 0;
    }

    /* Style time text */
    .time-right {
      float: right;
      color: #aaa;
    }

    /* Style time text */
    .time-left {
      float: left;
      color: #999;
    }
    .myMessage {
      margin: 5px;
      align-self: flex-start;
      min-height: 7vh;
      min-width: 20vw;
      border-style: solid;
      border-color: black;
      border-width: 1px;
      border-radius: 3px;
      justify-content: center;
    }
    .receivedMessage {
      margin: 5px;
      align-self: flex-end;
      min-height: 7vh;
      min-width: 20vw;
      border-style: solid;
      border-color: black;
      border-width: 1px;
      border-radius: 3px;
    }

    .messageText {
      position: relative;
      top: 20%;
      left: 5%;
    }
  </style>
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
